<h1>Group Wishlist</h1>
{{# if products }}
    <div class="cart page">
        <ul class="list-group">
            {{# each products }}
            <li class="list-group-item clearfix">
                <div class="col-xs-2">
                    <img  src={{ this.item.title }} class="img-top" alt="..."></img><br/>
                  </div>
                  <div class="col-xs-4">
                    <h5>{{{this.item.description}}}</h5>
                </div>
                <div class="col-xs-1 text-right">
                    <h5 class="quan-font">{{ this.quantity }}</h5>
                </div>
                <div class="col-xs-3 text-right">
                    Rs {{ this.price }}
                </div>
                <div class="col-xs-2 text-right">
                    <a href="/remove/{{this.item.id}}" class="btn btn-primary pad-btn"></i> Remove</a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Total Wishlist Price: Rs {{ totalPrice }}</strong>
    </div>
    <hr>
{{ else }}
    Your wishlist is empty.
{{/if}}
